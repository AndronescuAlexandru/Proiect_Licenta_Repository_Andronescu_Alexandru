<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Licenta.Views.CreditCardInfo">
    
    <ContentPage.Content>
        <StackLayout>
            <ImageButton Source="addButton.png"
                         Clicked="DismissButton_Clicked"
                         Scale="0.7"
                         BackgroundColor="Transparent"
                         VerticalOptions="Start"
                         HorizontalOptions="End"
                         Rotation="45"></ImageButton>
            <Label Text="Codul de securitate CVC/CVV este format din 3 cifre și se află pe spatele cardului dumneavoastră"
                   TextColor="Black"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Margin="10,20,10,0"/>
            <Image Source="card_cvv.png"
                   VerticalOptions="Center"
                   Margin="0,20,0,0"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>