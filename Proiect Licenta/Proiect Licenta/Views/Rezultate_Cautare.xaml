                           BorderColor="#cfcfcf"
                           Margin="-10,0,35,-10"
                           Padding="0,0,10,10"
                           CornerRadius="10"
                           Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    x:Name="LabelColLocPlecare"
                                    HorizontalOptions="StartAndExpand"
                                    VerticalOptions="Center"
                                    TextColor="Black"
                                    TextTransform="None"
                                    WidthRequest="130"
                                    BackgroundColor="Transparent"
                                    Padding="-10,0,0,0">
                                <!-- Clicked="LocPlecare_TextChanged"> -->
                            </Button>
                            <Button Grid.Column="1"
                                    x:Name="LabelColDestinatie"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    TextColor="Black"
                                    TextTransform="None"
                                    Padding="-20,0,0,0"
                                    WidthRequest="130"
                                    BackgroundColor="Transparent">
                                <!-- Clicked="Destinatie_TextChanged"> -->
                            </Button>

                            <Grid Grid.Column="2">
                                <Label FontAttributes="Bold"
                                   FontSize="14.5"
                                   TextColor="Black"
                                   Grid.Column="0"
                                   Margin="5,1,0,0"
                                   x:Name="LabelColDataPlecare"></Label>

                                <Label FontAttributes="Bold"
                                   FontSize="14.5"
                                   TextColor="Black"
                                   Grid.Column="1"
                                   Margin="-22,1,0,0"
                                   IsVisible="False"
                                   Text="test"
                                   x:Name="LabelColDataIntoarcere"></Label>
                            </Grid>
                            
                            <!--
                            <DatePicker Grid.Column="2"
                                        x:Name="LabelColDataPlecare"
